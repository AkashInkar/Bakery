<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffe0b2"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffe0b2"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/cardview"
            android:background="#8d6e63"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="#8d6e63"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#ffe0b2"
                    android:layout_marginTop="5dp"
                    android:id="@+id/sname"
                    android:textSize="24dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffe0b2"
                    android:text="Number"
                    android:layout_below="@id/sname"
                    android:layout_marginTop="5dp"
                    android:id="@+id/snumber"
                    android:textSize="24dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Address"
                    android:textColor="#ffe0b2"
                    android:layout_below="@id/snumber"
                    android:id="@+id/saddress"
                    android:textSize="24dp"
                    android:textStyle="bold"/>

                <!--<ImageButton
                    android:layout_width="wrap_content"
                    android:id="@+id/imgdelete"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_delete_btn"
                    android:layout_below="@id/sname"
                    android:layout_alignRight="@id/snumber"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />-->
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>